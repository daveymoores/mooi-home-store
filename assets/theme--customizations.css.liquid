/* Add your theme customizations below */

#insta-feed, .instafeed-shopify {
	margin-top: 0px!important;
}


/* timer styles for black friday */
#epb_background {
	top: 0;
    border-top: 8px solid var(--bdr-color--page);
    left: 8px!important;
    width: calc(100% - 16px)!important;
}

@media (min-width: 768px) {
	#epb_background {
      border-top-width: 12px;
      left: 12px!important;
      width: calc(100% - 24px)!important;
	}
}

.announcement--root {
	background: var(--bdr-color--page);
    color: var(--bg-color--announcement);
}

.announcement--wrapper {
    padding: 4px 16px 8px;
}

@media (min-width: 768px) {
    .announcement--wrapper {
        padding: 8px 16px 12px;
    }
}
/* end timer styles for black friday */

/** payment icons **/
.mooi--payment-icons {
    display: flex;
    justify-content: center;
    padding: 8px 0px;
}

.mooi--payment-icons .payment-icons--list {
    display: flex;
    justify-content: center;
}

.mooi--payment-icons .payment-icons--item:first-of-type {
    padding-left: 0;
}

.mooi--payment-icons .payment-icons--item:last-of-type {
    padding-right: 0;
}